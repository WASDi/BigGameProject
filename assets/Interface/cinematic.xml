<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="cinematic">
        <layer childLayout="center">
            <panel width="100%" height="100%" align="center" valign="top" childLayout="vertical">
                
                <panel height="10%" width="*" backgroundColor="#000F">
                    <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="900" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="top" length="900" startDelay="0" inherit="true"/>
                    </effect>
                </panel>
                
                <panel height="*" width="*"></panel>
                
                <panel height="10%" width="*" backgroundColor="#000F">
                    <effect>
                    <onStartScreen name="move" mode="in" direction="bottom" length="900" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="900" startDelay="0" inherit="true"/>
                    </effect>
                </panel>

            </panel>
        </layer>
    </screen>
</nifty>