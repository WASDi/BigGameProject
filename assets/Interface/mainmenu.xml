<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="start" controller="mygame.gui.MainMenuGuiController">
        <layer childLayout="center">
            <panel width="120px" height="100%" align="left" valign="top" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <control id="continueButton" name="button" label="Continue">
                    <interact onClick="continueGame()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="newButton" name="button" label="New Game">
                    <interact onClick="newGame()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="loadButton" name="button" label="Load Game">
                    <interact onClick="loadGame()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="optionsButton" name="button" label="Options">
                    <interact onClick="options()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="exitButton" name="button" label="Exit">
                    <interact onClick="exitGame()"/>
                </control>
            </panel>
        </layer>
    </screen>
    
    <screen id="cinematic">
        <layer childLayout="center">
            <panel width="100%" height="100%" align="center" valign="top" childLayout="vertical">
                
                <panel height="10%" width="*" backgroundColor="#000F">
                    <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="900" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="top" length="900" startDelay="0" inherit="true"/>
                    </effect>
                </panel>
                
                <panel height="*" width="*"></panel>
                
                <panel height="10%" width="*" backgroundColor="#000F">
                    <effect>
                    <onStartScreen name="move" mode="in" direction="bottom" length="900" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="900" startDelay="0" inherit="true"/>
                    </effect>
                </panel>

            </panel>
        </layer>
    </screen>
</nifty>