<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="mainmenu" controller="mygame.gui.MainMenuScreenController">
        <layer childLayout="center">
            <panel width="120px" height="100%" align="left" valign="top" childLayout="vertical" backgroundColor="#55a5" padding="10">
                <control id="continueButton" name="button" label="Continue">
                    <interact onClick="continueGame()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="newButton" name="button" label="New Game">
                    <interact onClick="newGame()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="loadButton" name="button" label="Load Game">
                    <interact onClick="loadGame()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="optionsButton" name="button" label="Options">
                    <interact onClick="options()"/>
                </control>
                
                <panel height="10px" width="*"></panel>
                <control id="exitButton" name="button" label="Exit">
                    <interact onClick="exitGame()"/>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>